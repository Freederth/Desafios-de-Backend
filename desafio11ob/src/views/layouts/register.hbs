<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <title>Registro</title>

</head>

<body>


    <br>
    <div class="container" style="background-color:#e9ecef">


        <div class="container" style="background-color:#e9ecef">
            <br>
            <h2 style="color:blue">Registrarse</h2>

            <form class="mt-5">
                <div class="form-group">
                    <label for="mail"></label>
                    <input required="required" type="email" class="form-control col-6" id="mail"
                        placeholder="Ingresa tu correo" />
                </div>
                <div class="form-group">
                    <label for="password"></label>
                    <input required="required" type="password" class="form-control col-6" id="password"
                        placeholder="Ingresa tu contraseña" />
                </div>

                <div class="col-6" style="padding-top: 23px;">
                    <input type="submit" class="submit btn btn-primary col-3" id="button" value="Registrarse" />
                </div>


            </form>
            <br>
        </div>

    </div>

    <div class="login container">
        <p>¿Ya tienes tu cuenta?</p>
        <a href="/login">Ingresar</a>
    </div>

    {{> footer }}

    <script>
        const btn = document.getElementById("button");
        btn.addEventListener("click", e => {
            e.preventDefault();
            const url = "http://localhost:8080/register";
            let mail = document.getElementById("mail").value;
            let password = document.getElementById("password").value;
            console.log({ mail, password });
            return fetch(url, {
                port: 8080,
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ mail, password }),
                // redirect to home
            }).then(res => {
                if (res.status === 200) {
                    window.location.href = "http://localhost:8080/";
                }
            }).catch(err => {
                console.log(err);
            });
        });
    </script>
    {{!-- boot strap --}}
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
        integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
        integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK"
        crossorigin="anonymous"></script>
</body>

</html>